<script>  
function calculate() {    
// Mendapatkan elemen input dan output dari tabel    
var hundred = document.getElementById("hundred");    
var fifty = document.getElementById("fifty");    
var twenty = document.getElementById("twenty");    
var ten = document.getElementById("ten");    
var five = document.getElementById("five");    
var two = document.getElementById("two");    
var one = document.getElementById("one"); 

var gope = document.getElementById("gope");

var total_hundred = document.getElementById("total_hundred");    
var total_fifty = document.getElementById("total_fifty");    
var total_twenty = document.getElementById("total_twenty");    
var total_ten = document.getElementById("total_ten");    
var total_five = document.getElementById("total_five");    
var total_two = document.getElementById("total_two");    
var total_one = document.getElementById("total_one");    
var total_gope = document.getElementById("total_gope");

var grand_total = document.getElementById("grand_total");    
    
// Menghitung total uang untuk masing-masing pecahan    
var total_hundred_value = hundred.value * 100000;    
var total_fifty_value = fifty.value * 50000;    
var total_twenty_value = twenty.value * 20000;    
var total_ten_value = ten.value * 10000;    
var total_five_value = five.value * 5000;    
var total_two_value = two.value * 2000;    
var total_one_value = one.value * 1000;  
var total_gope_value = gope.value * 500;
    
// Menghitung grand total uang    
var grand_total_value = total_hundred_value + total_fifty_value + total_twenty_value + total_ten_value + total_five_value + total_two_value + total_one_value + total_gope_value;    
    
// Menampilkan hasil perhitungan ke tabel dengan format rupiah    
total_hundred.innerHTML = "Rp. " + formatRupiah(total_hundred_value);    
total_fifty.innerHTML = "Rp. " + formatRupiah(total_fifty_value);    
total_twenty.innerHTML = "Rp. " + formatRupiah(total_twenty_value);    
total_ten.innerHTML = "Rp. " + formatRupiah(total_ten_value);    
total_five.innerHTML = "Rp. " + formatRupiah(total_five_value);    
total_two.innerHTML = "Rp. " + formatRupiah(total_two_value);    
total_one.innerHTML = "Rp. " + formatRupiah(total_one_value);    
total_gope.innerHTML = "Rp. " + formatRupiah(total_gope_value);

grand_total.innerHTML = "Rp. " + formatRupiah(grand_total_value);  
}  
  
// Fungsi untuk memformat angka ke rupiah  
// Sumber: https://stackoverflow.com/questions/149055/how-to-format-numbers-as-currency-string  
function formatRupiah(number) {    
var formatter = new Intl.NumberFormat('id-ID', {      
style: 'currency',      
currency: 'IDR',      
minimumFractionDigits: 0,      
maximumFractionDigits: 0,      
});      
return formatter.format(number);  
}  
</script>
